{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "jtc-react": ["node_modules/jtc-react/dist"]
    },
    "typeRoots": ["node_modules/@types", "node_modules/jtc-react/dist"],
    "target": "ES6",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
